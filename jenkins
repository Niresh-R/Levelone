pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Niresh-R/Levelone.git'
            }
        }
        stage('Build & Test') {
            steps {
                bat 'mvn clean test'
            }
        }
        stage('Allure Report') {
            steps {
                allure includeProperties: false, jdk: '', results: [[path: 'target/allure-results']]
            }
        }
    }
}
