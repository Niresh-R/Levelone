pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Pull code from your repo
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
                // Example for a Maven project
                sh 'mvn clean compile'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'mvn test'
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }

    }

    post {
        always {
            echo 'Pipeline finished.'
        }
    }
}